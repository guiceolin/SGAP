.header.block
  %h1
    Novo Grupo para #{@enunciation.name}
.block
  = simple_form_for @group, url: professor_enunciation_groups_path(@enunciation), html: { class: 'form-horizontal' } do |f|
    = render :partial => 'form', locals: { f:f }
    .form-actions
      = f.submit class: 'btn btn-primary'
