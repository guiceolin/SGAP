.header.block
  %h1
    Novo Grupo para #{@group.enunciation.name}
.block
  = simple_form_for [:professor, @current_subject, @current_crowd, @current_enunciation, @group], html: { class: 'form-horizontal' } do |f|
    = render :partial => 'form', locals: { f:f }
    .form-actions
      = f.submit class: 'btn btn-primary'
