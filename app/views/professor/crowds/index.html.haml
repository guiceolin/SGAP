%h1.span10
  = Crowd.model_name.human(count: :many)
= simple_form_for Crowd.new, url: search_professor_subject_crowds_path, as: :terms, html: { class: 'search form-inline' } do |f|
  %table.table.table-stripped.table-compensed.span10
    %thead
      %tr
        %th
          = f.input :name, label: false, placeholder: Crowd.human_attribute_name(:name)
        %th
          = f.input :subject_id, label: false, collection: Subject.collection_for_selection, prompt: Subject.model_name.human(count: :one)
    %tbody
      = render :partial => 'table'
